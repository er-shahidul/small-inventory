{% extends "@App/base.html.twig" %}

{% block title %}{{ 'Product'|trans }} | {{ parent() }}{% endblock %}
{% block pageTitle %}<h1>{{ 'Product'|trans }}</h1>{% endblock %}
{% form_theme form '@User/_form_template/bootstrap_3_horizontal_layout_user.html.twig' %}

{% block body %}
    <!-- BEGIN PAGE CONTENT INNER -->
    <div class="row" id="volume-list-page">
        <div class="col-sm-12">
            {% include '@App/layout-component/flash.html.twig' %}
            <div class="portlet light">
                <div class="portlet-title">
                    <div class="caption caption-md">
                        <i class="icon-bar-chart theme-font hide"></i>
                        <span class="caption-subject theme-font bold uppercase">
                           Product Form
                        </span>
                    </div>
                    <div class="actions">
                        <a href="{{ path('products_home') }}" class="btn green">
                            <i class="fa fa-plus"></i> {{ 'Back To The List'|trans }}</a>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class='table-data'>

                        {{ form_start(form, {'method': 'POST', 'attr': {'novalidate': 'novalidate'}}) }}


                        {{ form_end(form) }}

                    </div>
                </div>
            </div>
        </div>

    </div>
    <!-- END PAGE CONTENT INNER -->
{% endblock %}